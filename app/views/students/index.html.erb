<section>
	<header>
		<h1>Students</h1>
	</header>
	<table class="rwd-table">
		<thead>
			<tr>
				<th>Name</th>
				<th>Email</th>
				<th>Schools</th>
				<th></th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<%if @students.any? %>
        <% @students.each do |student| %>
          <tr>
            <td data-th="Name"><%= student.name %></td>
            <td data-th="Email"><%= student.email %></td>
            <td data-th="Schools">
              <%student.schools.each do |school| %>
                <br>  <%= school.name%>
              <% end %>
            </td>
            <td data-th="Edit">
            	<%= link_to "Edit #{student.name}", edit_student_path(student), class: "btn btn-info btn-md"  %>
            </td>
            <td data-th="Delete">
            	<%= link_to "Delete #{student.name}", student_path(student), method: :delete, class: "btn btn-danger btn-md" %>
            </td>
          </tr>
        <% end %>
      <% else %>
        <h1>No students to show</h1>
      <% end %>
		</tbody>
	</table>
	<%= link_to 'Add a student', new_student_path, class: "btn btn-success btn-lg" %> <br><br>
	<%= link_to "View schools",  schools_path, class: "btn btn-success btn-lg" %>
</section>